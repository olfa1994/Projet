{% extends 'base.html.twig' %}

{% block title %}Vente{% endblock %}

{% block body %}

    <div class="container mt-5" >
        <h1 class="mt-4 mb-3">Les offres
            <small>de ventes</small>
        </h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('home') }}">Home</a>

            </li>
            <li class="breadcrumb-item active">Ventes</li>

        </ol>
        <div class="row flex">
            {% for property in properties%}
                <div class="col-lg-4 mb-4">
                    <div class="card h-100 text-center">
                        <img class="card-img-top" src="{{ asset(property.path) }}" alt="{{ property.title }}">
                        <div class="card-body">
                            <a href="{{ path('property.show', {id : property.id}) }}" class="card-title">{{ property.title }}</a>
                            <h6 class="card-subtitle mb-2 text-muted">{{ property.price | number_format(0,'',' ')}} dt</h6>
                            <p class="card-text">{{ property.description }}</p>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('property.show', {id : property.id}) }}" class="btn btn-primary">DÃ©tails</a>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
        <!-- /.row -->
    </div>

{% endblock %}
